{
  "kind": "collectionType",
  "collectionName": "ankuendigungen",
  "info": {
    "singularName": "ankuendigung",
    "pluralName": "ankuendigungen",
    "displayName": "Ankündigung",
    "description": "Ankündigungen und News der Dorfkapelle Lauerbach"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titel": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "inhalt": {
      "type": "richtext",
      "required": true
    },
    "kurzbeschreibung": {
      "type": "text",
      "maxLength": 300
    },
    "datum": {
      "type": "datetime",
      "required": true
    },
    "autor": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::mitglied.mitglied"
    },
    "autor_name": {
      "type": "string",
      "maxLength": 100
    },
    "kategorie": {
      "type": "enumeration",
      "enum": [
        "ankuendigung",
        "bericht",
        "erfolg",
        "mitglieder",
        "termine",
        "vereinsleben",
        "presse"
      ],
      "required": true
    },
    "wichtig": {
      "type": "boolean",
      "default": false
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "bild": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "galerie": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "titel"
    },
    "tags": {
      "type": "json"
    },
    "lesedauer": {
      "type": "integer",
      "min": 1
    },
    "views": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "kommentare_erlaubt": {
      "type": "boolean",
      "default": true
    },
    "termin": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::termin.termin"
    },
    "externe_links": {
      "type": "json"
    },
    "social_media": {
      "type": "json"
    }
  }
}

