{
  "kind": "collectionType",
  "collectionName": "termine",
  "info": {
    "singularName": "termin",
    "pluralName": "termine",
    "displayName": "Termin",
    "description": "Termine und Events der Dorfkapelle Lauerbach"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titel": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "datum": {
      "type": "datetime",
      "required": true
    },
    "uhrzeit": {
      "type": "time"
    },
    "ort": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "adresse": {
      "type": "text"
    },
    "beschreibung": {
      "type": "richtext"
    },
    "kurzbeschreibung": {
      "type": "text",
      "maxLength": 300
    },
    "programm": {
      "type": "richtext"
    },
    "kategorie": {
      "type": "enumeration",
      "enum": [
        "auftritt",
        "konzert", 
        "probe",
        "vereinsveranstaltung",
        "fest",
        "wiesenmarkt",
        "dorfplatzfest",
        "jubilaeum"
      ],
      "required": true
    },
    "oeffentlich": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "eintritt": {
      "type": "string",
      "maxLength": 100
    },
    "eintritt_preis": {
      "type": "decimal",
      "min": 0
    },
    "kontakt": {
      "type": "string",
      "maxLength": 200
    },
    "kontakt_telefon": {
      "type": "string",
      "maxLength": 20
    },
    "kontakt_email": {
      "type": "email"
    },
    "bild": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "galerie": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "anfahrt": {
      "type": "text"
    },
    "besonderheiten": {
      "type": "text"
    },
    "wichtig": {
      "type": "boolean",
      "default": false
    },
    "abgesagt": {
      "type": "boolean",
      "default": false
    },
    "ausverkauft": {
      "type": "boolean",
      "default": false
    },
    "anmeldung_erforderlich": {
      "type": "boolean",
      "default": false
    },
    "anmeldung_bis": {
      "type": "date"
    },
    "max_teilnehmer": {
      "type": "integer",
      "min": 1
    },
    "aktuelle_anmeldungen": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "veranstalter": {
      "type": "string",
      "maxLength": 200
    },
    "website": {
      "type": "string"
    },
    "facebook_event": {
      "type": "string"
    },
    "reihenfolge": {
      "type": "integer",
      "min": 1
    },
    "wetter_abhaengig": {
      "type": "boolean",
      "default": false
    },
    "ausweichtermin": {
      "type": "datetime"
    },
    "ausweichort": {
      "type": "string",
      "maxLength": 200
    }
  }
}

